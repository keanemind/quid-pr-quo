{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "itty-router": ["types/itty"],
      "jsonwebtoken": ["types/jsonwebtoken"],
      "@cloudflare/workers-types": ["types/workers"]
    }
  },
  "include": ["src/**/*"]
}
